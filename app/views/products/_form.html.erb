<div class="bg-danger">
    <ul>
        <% if @product.errors.any?%>
            <li>
                <% @product.errors.full_messages.each do |msg|%>
                    <%=msg%>
                <%end%>
            </li>
        <%end%>
    </ul>
</div>

<%= form_with(model: @product, local: true ) do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control"%>
    <%= f.label :quanity%>
    <%= f.text_field :quanity, class: "form-control"%>
    <%= f.label :type%>
    <%= f.text_area :product_type, rows: 10 ,class: "form-control"%>
    <%= f.submit %>
<% end %>